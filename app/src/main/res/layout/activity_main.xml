<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button7"
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_insta"
            android:text="INSTAGRAM"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button8"

            android:layout_width="300dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_face"
            android:text="FACEBOOK"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button9"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="110dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_twi"

            android:text="TWITTER"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button10"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="110dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/ic_tum"
            android:text="TUMBLR"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000C"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textSize="25dp"
            android:text="@string/linktosite" />
    </LinearLayout>
</ScrollView>